<?xml version="1.0" encoding="utf-8" ?>

<log4net>
  <appender name="JsonFileAppender" type="log4net.Appender.FileAppender,log4net">
    <file value="Log//log.json" />
    <layout type="MovieAppBackEnd.Core.CrossCuttingConcerns.Logging.Log4Net.Layouts.JsonLayout, MovieAppBackEnd.Core" ></layout>
  </appender>

  <appender name="MongoDBAppender" type="Log4Mongo.MongoDBAppender, Log4Mongo">
    <connectionString value="mongodbconnectionstring"/>
    <collectionName value="Logs" />
    <field>
      <name value="Detail" />
      <layout type="MovieAppBackEnd.Core.CrossCuttingConcerns.Logging.Log4Net.Layouts.JsonLayout, MovieAppBackEnd.Core" />
    </field>
    <field>
      <name value="Date" />
      <layout type="log4net.Layout.PatternLayout" value="%date{dd'-'MM'-'yyyy HH':'mm':'ss'.'fff}" />
    </field>
    <field>
      <name value="Audit" />
      <layout type="log4net.Layout.PatternLayout" value="%level" />
    </field>
  </appender>

